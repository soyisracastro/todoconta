---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import OnlineAdvice from '../components/sections/OnlineAdvice.astro';
import Footer from '../components/layout/Footer.astro';
import Target from '../components/sections/Target.astro';
import Benefits from '../components/sections/Benefits.astro';
import Process from '../components/sections/Process.astro';
import ServicesLink from '../components/sections/ServicesLink.astro';
import AboutMe from '@/components/sections/AboutMe.astro';
import ServiceSEO from '../components/seo/ServiceSEO.astro';

const menuLinks = [
  { title: 'Cómo trabajo', url: '#como-trabajo' },
  { title: 'Por qué conmigo', url: '#beneficios' },
  { title: 'Quién soy', url: '#about-me' },
  { title: '¿Es para ti?', url: '#para-quien' },
  { title: 'Otros servicios', url: '#servicios-completos' },
];

const cta = {
  title: 'Agendar asesoría',
  link: 'https://wa.me/5215544753602?text=Hola,%20me%20gustaría%20agendar%20una%20asesoría',
};

// SEO data para ServiceSEO
const serviceData = {
  name: 'Asesoría Fiscal Premium - Sesión Estratégica 1 hora',
  description: 'Resuelve tus dudas con el SAT en una sesión estratégica de 1 hora. Obtén respuestas claras, evita multas y optimiza tus impuestos con un experto contador certificado.',
  url: 'https://todoconta.com/asesoria',
  price: 1200,
  priceNote: 'por hora',
  deliveryTime: '1 hora',
  category: 'Asesoría Fiscal',
  faqs: [
    {
      question: '¿Cómo funciona la asesoría fiscal online?',
      answer: 'Agendas una sesión de 1 hora vía videollamada donde resolveremos tus dudas fiscales específicas.Recibes recomendaciones personalizadas y un plan de acción claro para tu situación.'
    },
    {
      question: '¿Qué temas puedo consultar en la asesoría?',
      answer: 'Puedes consultar sobre RESICO, deducciones fiscales, trámites SAT, cambio de régimen, regularización, optimización de impuestos, y cualquier duda relacionada con tu situación fiscal personal o de tu negocio.'
    },
    {
      question: '¿Cuánto tiempo tengo que esperar para agendar?',
      answer: 'Generalmente hay disponibilidad en las próximas 48-72 horas. Al contactarnos por WhatsApp, coordinamos el horario que mejor te convenga.'
    },
    {
      question: '¿La asesoría tiene garantía?',
      answer: 'Sí, garantizamos que recibirás información clara, actualizada y aplicable a tu caso. Si no quedas satisfecho, trabajaremos contigo hasta resolver tus dudas.'
    }
  ],
  testimonials: [
    {
      quote: 'La asesoría fue clara y directa. Israel me ayudó a entender mi situación fiscal y me dio pasos concretos para optimizar mis impuestos.',
      author: 'María González',
      position: 'Consultora Independiente',
      rating: 5
    },
    {
      quote: 'Excelente servicio. En una hora resolvió todas mis dudas sobre RESICO y me ahorró meses de confusión con el SAT.',
      author: 'Carlos Hernández',
      position: 'Desarrollador Freelance',
      rating: 5
    },
    {
      quote: 'Muy profesional y paciente. Explicó todo de manera que lo entendí perfectamente. Totalmente recomendado.',
      author: 'Ana López',
      position: 'Diseñadora Gráfica',
      rating: 5
    }
  ]
};
---

<Layout
  title="Asesoría Fiscal Personalizada | Contador para Profesionistas y Empresarios - Todoconta"
  description="Servicios contables integrales desde $3,500/mes. Asesorías fiscales online desde $1,200/hora. Tranquilidad fiscal garantizada para tu empresa."
  keywords="asesoría fiscal, contador para profesionistas, contador para empresarios, asesoría fiscal online, RESICO, deducciones fiscales, trámites SAT, contador independiente, cómo pagar menos impuestos"
>
  <ServiceSEO
    slot="head"
    name={serviceData.name}
    description={serviceData.description}
    url={serviceData.url}
    price={serviceData.price}
    priceNote={serviceData.priceNote}
    deliveryTime={serviceData.deliveryTime}
    category={serviceData.category}
    faqs={serviceData.faqs}
    testimonials={serviceData.testimonials}
  />

  <Navbar links={menuLinks} cta={cta} />
  <OnlineAdvice cta={cta} />
  <Target />
  <Benefits />
  <AboutMe />
  <Process />
  <ServicesLink />
  <Footer />
</Layout>
