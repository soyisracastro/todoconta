---
import LandingLayout from '../layouts/LandingLayout.astro';
import ProfileHeader from '../components/ui/ProfileHeader.astro';
import LinkButton from '../components/ui/LinkButton.astro';
import SubstackWidget from '../components/ui/SubstackWidget.astro';
import SEOContent from '../components/sections/SEOContent.astro';
import PersonSchema from '../components/seo/PersonSchema.astro';
---

<LandingLayout
  title="Israel Castro - Contador y Asesor Fiscal"
  description="Asesorías fiscales personalizadas y servicios contables integrales. Experto en RESICO, deducciones fiscales y optimización de impuestos."
  keywords={[
    'contador',
    'asesoría fiscal',
    'servicios contables',
    'RESICO',
    'impuestos',
    'SAT',
    'Israel Castro',
  ]}
  showFooter={false}
>
  <!-- Schema.org Person para la home page -->
  <PersonSchema slot="head" />
  <div class="linktree-container">
    <ProfileHeader
      name="Israel Castro"
      bio="Contador y asesor fiscal especializado en profesionistas y empresarios. Te ayudo a optimizar tus impuestos y mantener tu contabilidad en orden."
      imagePath="/images/photo.png"
    />

    <!-- CTAs Principales -->
    <div class="main-ctas">
      <LinkButton href="/asesoria" variant="primary" size="large">
        Asesoría en línea
      </LinkButton>
      <LinkButton href="/servicios" variant="primary" size="large">
        Servicios contables
      </LinkButton>
    </div>

    <!-- Links Secundarios -->
    <div class="secondary-links">
      <LinkButton href="/servicios#adicionales" variant="outline" size="default">
        Más servicios
      </LinkButton>
      <LinkButton href="/ia-contadores" variant="outline" size="default">
        Masterclass de IA
      </LinkButton>
      <LinkButton href="/podcast" variant="outline" size="default">
        Podcast
      </LinkButton>
    </div>

    <!-- Widget de Substack -->
    <SubstackWidget title="Suscríbete al newsletter" />

    <!-- Footer mínimo -->
    <div class="minimal-footer">
      <p>&copy; {new Date().getFullYear()} Todoconta. Todos los derechos reservados.</p>
    </div>
  </div>

  <!-- SEO Content Section (Below the fold) -->
  <SEOContent />
</LandingLayout>

<style>
  .linktree-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-8) var(--space-6);
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      var(--color-background-alt) 100%
    );
  }

  /* Mobile: Stack vertical (Linktree style) */
  .main-ctas,
  .secondary-links {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .main-ctas {
    margin-bottom: var(--space-6);
  }

  .secondary-links {
    margin-bottom: var(--space-10);
  }

  .minimal-footer {
    margin-top: var(--space-12);
    text-align: center;
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .minimal-footer p {
    margin: 0;
  }

  /* Desktop: Grid más elaborado */
  @media (min-width: 769px) {
    .linktree-container {
      padding: var(--space-16) var(--space-8);
    }

    .main-ctas {
      max-width: 800px;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
      margin-bottom: var(--space-8);
    }

    .secondary-links {
      max-width: 800px;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-4);
      margin-bottom: var(--space-12);
    }

    /* Efectos glassmorphism en desktop */
    .linktree-container::before {
      content: '';
      position: fixed;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(
        circle at 30% 50%,
        rgba(20, 184, 166, 0.05) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 70% 50%,
        rgba(245, 158, 11, 0.05) 0%,
        transparent 50%
      );
      pointer-events: none;
      z-index: -1;
    }
  }

  /* Animaciones de entrada */
  .main-ctas > :nth-child(1) {
    animation: fadeInUp 0.6s ease-out 0.1s backwards;
  }

  .main-ctas > :nth-child(2) {
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .secondary-links > :nth-child(1) {
    animation: fadeInUp 0.6s ease-out 0.3s backwards;
  }

  .secondary-links > :nth-child(2) {
    animation: fadeInUp 0.6s ease-out 0.4s backwards;
  }

  .secondary-links > :nth-child(3) {
    animation: fadeInUp 0.6s ease-out 0.5s backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
