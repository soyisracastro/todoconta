---
import LandingLayout from '../layouts/LandingLayout.astro';
import HeroBento from '../components/sections/HeroBento.astro';
import MediaSection from '../components/sections/MediaSection.astro';
import TrustStrip from '../components/sections/TrustStrip.astro';
import HomeSEO from '../components/sections/HomeSEO.astro';
import PersonSchema from '../components/seo/PersonSchema.astro';
---

<LandingLayout
  title="Israel Castro - Contador y Asesor Fiscal"
  description="Asesorías fiscales personalizadas y servicios contables integrales. Experto en RESICO, deducciones fiscales y optimización de impuestos."
  keywords={[
    'contador',
    'asesoría fiscal',
    'servicios contables',
    'RESICO',
    'impuestos',
    'SAT',
    'Israel Castro',
    'Masterclass IA',
  ]}
  showFooter={true}
>
  <!-- Schema.org Person para la home page -->
  <PersonSchema slot="head" />

  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12 flex flex-col gap-16"
  >
    <!-- Hero Bento Grid -->
    <section id="hero" class="fade-in-up">
      <HeroBento />
    </section>

    <!-- Podcast & Newsletter -->
    <section id="recursos" class="fade-in-up" style="animation-delay: 0.2s;">
      <MediaSection />
    </section>

    <!-- Trust Signals Strip -->
    <section id="confianza" class="fade-in-up" style="animation-delay: 0.4s;">
      <TrustStrip />
    </section>

    <!-- Stylized SEO Section -->
    <section id="sobre-mi" class="fade-in-up" style="animation-delay: 0.6s;">
      <HomeSEO />
    </section>
  </div>
</LandingLayout>

<style>
  /* Base styles to complement the design system */
  :root {
    --color-primary: #254ce9; /* Override with the requested design's primary if preferred, or keep design system's */
  }

  /* Fade-in animation for sections */
  .fade-in-up {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Custom utility classes derived from the design */
  :global(.text-primary) {
    color: var(--color-primary);
  }
  :global(.bg-primary) {
    background-color: var(--color-primary);
  }
</style>
