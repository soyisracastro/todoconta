---
import LandingLayout from '@/layouts/LandingLayout.astro';
import IAGraciasHero from '@/components/pages/ia-contadores/IAGraciasHero.astro';
import IAGraciasIncluded from '@/components/pages/ia-contadores/IAGraciasIncluded.astro';
import IAGraciasNextStep from '@/components/pages/ia-contadores/IAGraciasNextStep.astro';

const title = '¡Gracias por Descargar! | TodoConta';
const description =
  'Revisa tu email para acceder a los casos prácticos y recursos gratuitos de IA para contadores.';
const keywords = ['descarga confirmada', 'recursos IA contadores'];

// Configuration
const RETO_DETAILS_URL = '/ia-contadores/reto-12-dias';
const PDF_DOWNLOAD_LINK =
  'https://s3.us-east-1.amazonaws.com/todoconta.com/uploads/Casos+pra%CC%81cticos_+3+flujos+hi%CC%81bridos+que+te+ahorrara%CC%81n+horas.pdf';
---

<LandingLayout
  title={title}
  description={description}
  keywords={keywords}
  showFooter={false}
>
  <!-- 1. Hero Confirmation Section -->
  <div class="theme-ia tech-bg min-h-screen">
    <IAGraciasHero
      retoDetailsUrl={RETO_DETAILS_URL}
      pdfDownloadLink={PDF_DOWNLOAD_LINK}
    />

    <!-- 2. What's Included Section -->
    <IAGraciasIncluded />

    <!-- 3. Next Step Section -->
    <IAGraciasNextStep retoDetailsUrl={RETO_DETAILS_URL} />
  </div>

  <script>
    import { initIAUtils, trackEvent } from '@/scripts/ia-utils.js';

    // Initialize animations and CTA tracking
    initIAUtils();

    // Page-specific tracking
    trackEvent('thank_you_page_view', {
      page: 'recursos-gratis-gracias',
    });
  </script>
</LandingLayout>
