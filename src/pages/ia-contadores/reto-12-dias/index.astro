<style>
  /* Dark Theme Variables for this page only */
  :root {
    --bg-dark: #0f0518;
    --bg-darker: #000000;
    --bg-card: rgba(255, 255, 255, 0.05);
    --text-main: #ffffff;
    --text-muted: #9ca3af;
    --accent-purple: #a855f7;
    --accent-blue: #3b82f6;
    --accent-gold: #eab308;
    --color-success: #10b981;
  }

  /* Global Styles for this page */
  section {
    padding: var(--space-16) 0;
    color: var(--text-main);
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .max-w-md {
    max-width: 800px;
  }

  /* Utilities */
  .grid-2-cols {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }
  .grid-3-cols {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
  .grid-4-cols {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .grid-2-cols {
      grid-template-columns: 1fr 1fr;
    }
    .grid-3-cols {
      grid-template-columns: repeat(3, 1fr);
    }
    .grid-4-cols {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  .section-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    line-height: 1.2;
    color: var(--text-main);
    -webkit-text-fill-color: unset;
  }
  .section-subtitle {
    font-size: var(--font-size-xl);
    color: var(--text-muted);
  }
  .text-highlight {
    color: var(--accent-purple);
  }

  /* ========================================
     ANIMATIONS
     ======================================== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 0 20px rgba(234, 179, 8, 0.3);
    }
    50% {
      transform: scale(1.02);
      box-shadow: 0 0 30px rgba(234, 179, 8, 0.5);
    }
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes particleFloat {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(30px, -50px) rotate(120deg);
    }
    66% {
      transform: translate(-20px, 20px) rotate(240deg);
    }
    100% {
      transform: translate(0, 0) rotate(360deg);
    }
  }

  /* Animation classes */
  .animate-on-scroll {
    opacity: 0;
  }

  .animate-on-scroll.animated {
    animation-duration: 0.8s;
    animation-fill-mode: forwards;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animated[data-animation='fade-in-up'] {
    animation-name: fadeInUp;
  }
  .animated[data-animation='fade-in-down'] {
    animation-name: fadeInDown;
  }
  .animated[data-animation='fade-in'] {
    animation-name: fadeIn;
  }
  .animated[data-animation='slide-in-left'] {
    animation-name: slideInLeft;
  }
  .animated[data-animation='slide-in-right'] {
    animation-name: slideInRight;
  }
  .animated[data-animation='scale-in'] {
    animation-name: scaleIn;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    background: linear-gradient(
      to bottom,
      var(--bg-darker),
      #1a0b2e,
      var(--bg-dark)
    );
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: var(--space-32);
    padding-bottom: var(--space-20);
    text-align: center;
  }

  .hero-gradient-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 50% 0%,
      rgba(168, 85, 247, 0.2),
      transparent 50%
    );
    pointer-events: none;
  }

  .floating-particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--accent-purple);
    border-radius: 50%;
    opacity: 0.3;
    animation: particleFloat 15s infinite ease-in-out;
  }

  .particle:nth-child(1) {
    top: 10%;
    left: 20%;
    animation-delay: 0s;
  }
  .particle:nth-child(2) {
    top: 20%;
    right: 30%;
    animation-delay: 2s;
  }
  .particle:nth-child(3) {
    top: 60%;
    left: 10%;
    animation-delay: 4s;
  }
  .particle:nth-child(4) {
    top: 40%;
    right: 20%;
    animation-delay: 1s;
  }
  .particle:nth-child(5) {
    bottom: 20%;
    left: 50%;
    animation-delay: 3s;
  }

  .hero-bg-overlay {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(255, 255, 255, 0.1) 1px,
      transparent 0
    );
    background-size: 40px 40px;
    opacity: 0.2;
  }

  .hero-blobs .blob {
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }
  .blob-purple {
    top: 10%;
    right: 0;
    background: var(--accent-purple);
  }
  .blob-blue {
    bottom: 0;
    left: 0;
    background: var(--accent-blue);
  }

  .hero-content {
    position: relative;
    z-index: 10;
  }

  .badge-container {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.1);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-full);
    border: 1px solid rgba(255, 255, 255, 0.2);
    margin-bottom: var(--space-8);
    animation: float 3s infinite ease-in-out;
    backdrop-filter: blur(10px);
  }
  .badge-text {
    color: #e9d5ff;
    font-weight: 500;
    font-size: var(--font-size-sm);
  }

  .hero-title {
    font-size: var(--font-size-6xl);
    font-weight: 800;
    margin-bottom: var(--space-6);
    line-height: 1.1;
    color: #ffffff;
  }
  .gradient-text {
    background: linear-gradient(
      90deg,
      #60a5fa,
      #c084fc,
      #f472b6,
      #60a5fa,
      #c084fc
    );
    background-size: 200% auto;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    animation: gradientShift 5s linear infinite;
    display: inline-block;
  }

  .hero-subtitle {
    font-size: var(--font-size-2xl);
    color: #e2e8f0;
    max-width: 800px;
    margin: 0 auto var(--space-8);
  }

  .hero-meta {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-12);
    flex-wrap: wrap;
  }
  .meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(0, 0, 0, 0.3);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-lg);
    color: #e2e8f0;
    backdrop-filter: blur(4px);
    transition: all 0.3s ease;
  }

  .meta-item:hover {
    background: rgba(0, 0, 0, 0.5);
    transform: translateY(-2px);
  }

  .hero-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .final-actions .btn-glow,
  .hero-cta .btn-glow {
    background: var(--accent-gold);
    color: black;
    font-weight: bold;
    border: none;
    box-shadow: 0 0 20px rgba(234, 179, 8, 0.3);
  }
  .final-actions .btn-glow:hover,
  .hero-cta .btn-glow:hover {
    transform: scale(1.05);
    background: #facc15;
  }

  .btn-pulse {
    animation: pulse 2s infinite;
  }

  /* Problem Section */
  .problem-section {
    background: var(--bg-dark);
  }
  .card {
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--space-8);
    border-radius: var(--border-radius-xl);
    transition:
      transform 0.3s ease,
      background 0.3s ease,
      border-color 0.3s ease;
  }
  .card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.1);
  }

  .card-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-6);
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
  }
  .card-title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--text-main);
  }
  .card-text {
    color: var(--text-muted);
    line-height: 1.6;
  }

  .card-opportunity {
    border-color: rgba(168, 85, 247, 0.3);
    position: relative;
    overflow: hidden;
  }
  .new-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--accent-purple);
    font-size: var(--font-size-xs);
    font-weight: bold;
    padding: var(--space-1) var(--space-3);
    border-bottom-left-radius: var(--border-radius-lg);
  }

  /* Difference Section */
  .difference-section {
    background: linear-gradient(to bottom, var(--bg-dark), #1a0b2e);
  }
  .feature-box {
    background: var(--bg-card);
    padding: var(--space-6);
    border-radius: var(--border-radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  .feature-box:hover {
    transform: translateY(-5px);
    border-color: var(--accent-purple);
  }
  .feature-emoji {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-4);
  }
  .feature-title {
    font-size: var(--font-size-lg);
    font-weight: 700;
    margin-bottom: var(--space-2);
    color: var(--text-main);
  }
  .feature-text {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
  }

  /* Timeline Section */
  .timeline-section {
    background: #1a0b2e;
  }
  .timeline-block {
    background: var(--bg-card);
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: var(--space-8);
    transition: all 0.3s ease;
  }
  .timeline-block:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }
  .block-header {
    padding: var(--space-6);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  .block-header h3 {
    font-size: var(--font-size-xl);
    font-weight: 700;
    margin: 0;
    color: inherit;
  }

  .block-purple .block-header {
    background: rgba(168, 85, 247, 0.3);
  }
  .block-purple .block-header h3 {
    color: #e9d5ff;
  }
  .block-blue .block-header {
    background: rgba(59, 130, 246, 0.3);
  }
  .block-blue .block-header h3 {
    color: #bfdbfe;
  }
  .block-indigo .block-header {
    background: rgba(99, 102, 241, 0.3);
  }
  .block-indigo .block-header h3 {
    color: #c7d2fe;
  }
  .block-pink .block-header {
    background: rgba(236, 72, 153, 0.3);
  }
  .block-pink .block-header h3 {
    color: #fbcfe8;
  }
  .block-gold .block-header {
    background: rgba(234, 179, 8, 0.3);
  }
  .block-gold .block-header h3 {
    color: #fef08a;
  }

  .block-content {
    padding: var(--space-6);
  }
  .day-item {
    margin-bottom: var(--space-4);
  }
  .day-label {
    font-size: var(--font-size-xs);
    font-weight: bold;
    color: var(--text-muted);
    text-transform: uppercase;
    display: block;
    margin-bottom: var(--space-1);
  }
  .day-item h4 {
    font-weight: 700;
    margin: 0 0 var(--space-2) 0;
    color: var(--text-main);
  }
  .day-item p {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    margin: 0;
  }

  .flex-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
  }
  .btn-gold-outline {
    border-color: var(--accent-gold);
    color: var(--accent-gold);
    width: 100%;
  }
  .btn-gold-outline:hover {
    background: var(--accent-gold);
    color: black;
  }

  .timeline-cta {
    margin-top: var(--space-12);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .btn-gold-outline-large {
    border: 2px solid var(--accent-gold);
    color: var(--accent-gold);
    background: transparent;
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
    font-weight: 600;
    border-radius: var(--border-radius-full);
    transition: all 0.3s ease;
    box-shadow: 0 0 20px rgba(234, 179, 8, 0.2);
    min-width: 300px;
  }
  .btn-gold-outline-large:hover {
    background: var(--accent-gold);
    color: var(--bg-darker);
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(234, 179, 8, 0.4);
  }

  /* Testimonials Section */
  .testimonials {
    background: linear-gradient(to bottom, var(--bg-dark), #1a0b2e);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    max-width: 1000px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonial-card {
    background: var(--bg-card);
    padding: var(--space-6);
    border-radius: var(--border-radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-10px);
    border-color: var(--accent-purple);
    box-shadow: 0 20px 40px rgba(168, 85, 247, 0.3);
  }

  .quote-icon {
    font-size: 60px;
    color: var(--accent-purple);
    opacity: 0.2;
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .testimonial-quote {
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--text-muted);
    margin-bottom: var(--space-4);
  }

  .testimonial-highlight {
    background: rgba(168, 85, 247, 0.2);
    color: var(--accent-purple);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--border-radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 600;
    margin-bottom: var(--space-4);
    text-align: center;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding-top: var(--space-4);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .author-avatar {
    font-size: 25px;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
  }

  .author-name {
    font-weight: 600;
    margin: 0;
    font-size: var(--font-size-base);
  }

  .author-role {
    font-size: var(--font-size-sm);
    color: var(--text-main);
    margin: 0;
  }

  /* Included Section */
  .included-section {
    background: var(--bg-dark);
  }
  .group-title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--accent-purple);
    margin-bottom: var(--space-6);
    border-bottom: 1px solid rgba(168, 85, 247, 0.3);
    padding-bottom: var(--space-2);
  }
  .check-list {
    list-style: none;
