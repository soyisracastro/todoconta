<!-- p5.js Matrix Effect -->
<script is:inline>
  // Wait for p5.js to load
  window.addEventListener('load', function () {
    // Matrix-inspired particle system
    let particles = [];
    let lines = [];
    const numParticles = 80;
    const numLines = 15;

    new p5(function (p) {
      p.setup = function () {
        const container = document.getElementById('p5-canvas-container');
        const canvas = p.createCanvas(p.windowWidth, p.windowHeight);
        canvas.parent('p5-canvas-container');

        // Initialize particles (floating code symbols)
        for (let i = 0; i < numParticles; i++) {
          particles.push(new Particle(p));
        }

        // Initialize falling lines (Matrix rain)
        for (let i = 0; i < numLines; i++) {
          lines.push(new MatrixLine(p));
        }
      };

      p.draw = function () {
        // Dark background with slight transparency for trail effect
        p.background(15, 23, 42, 25);

        // Update and display particles
        for (let particle of particles) {
          particle.update();
          particle.display();
        }

        // Update and display matrix lines
        for (let line of lines) {
          line.update();
          line.display();
        }
      };

      p.windowResized = function () {
        p.resizeCanvas(p.windowWidth, p.windowHeight);
      };

      // Particle class (floating symbols)
      class Particle {
        constructor(p) {
          this.p = p;
          this.x = p.random(p.width);
          this.y = p.random(p.height);
          this.size = p.random(8, 16);
          this.speedX = p.random(-0.3, 0.3);
          this.speedY = p.random(-0.5, 0.5);
          this.alpha = p.random(30, 100);
          this.symbol = p.random(['<', '>', '{', '}', '(', ')', ';', '=', '/']);
          this.color = p.random([
            [20, 184, 166], // Teal
            [251, 146, 60], // Orange
            [139, 92, 246], // Purple
          ]);
        }

        update() {
          this.x += this.speedX;
          this.y += this.speedY;

          // Wrap around edges
          if (this.x < 0) this.x = this.p.width;
          if (this.x > this.p.width) this.x = 0;
          if (this.y < 0) this.y = this.p.height;
          if (this.y > this.p.height) this.y = 0;

          // Pulse alpha
          this.alpha += this.p.sin(this.p.frameCount * 0.02) * 0.5;
        }

        display() {
          this.p.push();
          this.p.fill(this.color[0], this.color[1], this.color[2], this.alpha);
          this.p.noStroke();
          this.p.textSize(this.size);
          this.p.textAlign(this.p.CENTER, this.p.CENTER);
          this.p.text(this.symbol, this.x, this.y);
          this.p.pop();
        }
      }

      // Matrix Line class (falling code)
      class MatrixLine {
        constructor(p) {
          this.p = p;
          this.reset();
        }

        reset() {
          this.x = this.p.random(this.p.width);
          this.y = this.p.random(-500, -50);
          this.speed = this.p.random(2, 5);
          this.length = this.p.random(100, 300);
          this.characters = [];

          // Generate random characters for the line
          const chars =
            'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789{}[]<>()';
          for (let i = 0; i < 20; i++) {
            this.characters.push(
              chars.charAt(Math.floor(Math.random() * chars.length))
            );
          }
        }

        update() {
          this.y += this.speed;

          // Reset when off screen
          if (this.y > this.p.height + 100) {
            this.reset();
          }

          // Randomly change characters
          if (this.p.random(1) > 0.95) {
            const index = Math.floor(
              Math.random() * this.characters.length
            );
            const chars =
              'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789{}[]<>()';
            this.characters[index] = chars.charAt(
              Math.floor(Math.random() * chars.length)
            );
          }
        }

        display() {
          this.p.push();

          // Draw each character with decreasing opacity
          for (let i = 0; i < this.characters.length; i++) {
            const charY = this.y - i * 15;
            const alpha = this.p.map(i, 0, this.characters.length, 150, 0);

            // Color gradient (teal to transparent)
            this.p.fill(20, 184, 166, alpha);
            this.p.noStroke();
            this.p.textSize(14);
            this.p.textAlign(this.p.CENTER, this.p.CENTER);
            this.p.text(this.characters[i], this.x, charY);
          }

          this.p.pop();
        }
      }
    });
  });
</script>

<!-- Sendy Form Handler -->
<script
  is:inline
  define:vars={{
    formId: SENDY_LIST_ID,
    apiKey: import.meta.env.PUBLIC_SENDY_API_KEY,
  }}
>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('programming-subscribe-form');

    if (form) {
      form.addEventListener('submit', async function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        const submitButton = form.querySelector('button[type="submit"]');
        const btnText = submitButton.querySelector('.btn-text');

        // Preparar datos para Sendy
        const data = {
          api_key: apiKey,
          list: formId,
          ...Object.fromEntries(formData),
          boolean: 'true',
        };

        // Deshabilitar bot贸n durante el env铆o
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.classList.add('loading');
          if (btnText) btnText.textContent = 'Enviando...';
        }

        try {
          const response = await fetch(
            'https://sendy.todoconta.com/subscribe',
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
              },
              body: new URLSearchParams(data),
            }
          );

          const responseText = await response.text();

          // Remover mensajes anteriores
          form
            .querySelectorAll('.success-message, .error-message')
            .forEach(msg => msg.remove());

          if (responseText === '1') {
            // xito
            const successMessage = document.createElement('div');
            successMessage.className = 'success-message';
            successMessage.innerHTML =
              '<strong>隆Bienvenido a bordo!</strong> Revisa tu correo para comenzar tu viaje en programaci贸n.';
            form.appendChild(successMessage);
            form.reset();
          } else if (responseText === 'Already subscribed.') {
            // Ya suscrito
            const infoMessage = document.createElement('div');
            infoMessage.className = 'info-message';
            infoMessage.innerHTML =
              '<strong>Ya est谩s suscrito</strong> Revisa tu bandeja de entrada.';
            form.appendChild(infoMessage);
          } else {
            // Error
            const errorMessage = document.createElement('div');
            errorMessage.className = 'error-message';
            errorMessage.innerHTML = `<strong>Error:</strong> ${responseText}`;
            form.appendChild(errorMessage);
          }
        } catch (error) {
          console.error('Error subscribing user:', error);
          const errorMessage = document.createElement('div');
          errorMessage.className = 'error-message';
          errorMessage.innerHTML =
            '<strong>Error de conexi贸n</strong> Por favor, intenta m谩s tarde.';
          form.appendChild(errorMessage);
        } finally {
          // Rehabilitar bot贸n
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.classList.remove('loading');
            if (btnText) btnText.textContent = 'Unirme a la Lista de Espera';
          }
        }
      });
    }
  });
</script>

<!-- Countdown Timer Script -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Fecha de inicio del curso: 01 de diciembre de 2025 a las 00:00
    const launchDate = new Date('2025-12-01T00:00:00').getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = launchDate - now;

      // Calcular d铆as, horas, minutos y segundos
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor(
        (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
      );
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      // Actualizar el DOM
      const daysEl = document.getElementById('days');
      const hoursEl = document.getElementById('hours');
      const minutesEl = document.getElementById('minutes');
      const secondsEl = document.getElementById('seconds');

      if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
      if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
      if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
      if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');

      // Si el contador llega a cero
      if (distance < 0) {
        clearInterval(countdownInterval);
        if (daysEl) daysEl.textContent = '00';
        if (hoursEl) hoursEl.textContent = '00';
        if (minutesEl) minutesEl.textContent = '00';
        if (secondsEl) secondsEl.textContent = '00';
      }
    }

    // Actualizar inmediatamente
    updateCountdown();

    // Actualizar cada segundo
    const countdownInterval = setInterval(updateCountdown, 1000);
  });
</script>

