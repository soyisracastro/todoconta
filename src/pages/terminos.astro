          if (!targetId) return;
          const targetSection = document.querySelector(targetId);

          if (targetSection) {
            targetSection.scrollIntoView({
              behavior: 'smooth',
              block: 'start',
            });

            // Update active state
            tocLinks.forEach(l => l.classList.remove('active'));
            link.classList.add('active');
