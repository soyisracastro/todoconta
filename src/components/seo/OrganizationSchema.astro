  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'TodoConta',
  alternateName: 'Todoconta - Servicios Contables',
  url: 'https://todoconta.com',
  logo: 'https://todoconta.com/images/logo-icon.svg',
  description:
