<style>
  .hero-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background-color: var(--color-hero-background);
    overflow: hidden;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  /* Background Effects */
  .hero-bg-glow {
    position: absolute;
    top: -20%;
    right: -10%;
    width: 60vw;
    height: 60vw;
    background: radial-gradient(
      circle,
      rgba(20, 184, 166, 0.15) 0%,
      rgba(15, 23, 42, 0) 70%
    );
    border-radius: 50%;
    filter: blur(60px);
    z-index: 0;
    pointer-events: none;
  }

  .hero-bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
    pointer-events: none;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-12);
    align-items: center;
  }

  /* Content Styles */
  .hero-content {
    max-width: 650px;
  }

  .badge-wrapper {
    margin-bottom: var(--space-6);
  }

  .badge-hero {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: rgba(20, 184, 166, 0.1);
    border: 1px solid rgba(20, 184, 166, 0.2);
    border-radius: var(--border-radius-full);
    color: var(--color-primary);
    font-size: var(--font-size-sm);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .hero-title {
    font-size: var(--font-size-6xl);
    line-height: 1.1;
    color: var(--color-white);
    margin-bottom: var(--space-6);
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-hero-text-secondary);
    margin-bottom: var(--space-10);
    max-width: 540px;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-12);
  }

  .hero-features {
    display: flex;
    gap: var(--space-8);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hero-feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .feature-icon {
    font-size: 1.5rem;
  }

  .feature-text {
    color: var(--color-hero-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  /* Visual/Card Styles */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .card-visual {
    width: 100%;
    max-width: 400px;
    padding: var(--space-8);
    border-radius: var(--border-radius-2xl);
    background: rgba(30, 41, 59, 0.7); /* Darker glass for dark bg */
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .status-dot {
    width: 12px;
    height: 12px;
    background-color: var(--color-success);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(16, 185, 129, 0.5);
  }

  .status-text {
    color: var(--color-white);
    font-weight: 600;
    font-size: var(--font-size-sm);
  }

  .stat-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-4);
    color: var(--color-hero-text-secondary);
  }

  .stat-value {
    color: var(--color-white);
    font-weight: 600;
  }

  .stat-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: var(--space-6) 0;
  }

  .stat-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-white);
  }

  /* Floating Badge */
  .floating-badge {
    position: absolute;
    bottom: -20px;
    right: -20px;
    background: var(--color-white);
    padding: var(--space-3) var(--space-5);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-weight: 700;
    color: var(--color-text-primary);
    z-index: 2;
  }

  .sat-logo {
    background: var(--color-text-primary);
    color: var(--color-white);
    padding: 2px 6px;
    font-size: 10px;
    border-radius: 4px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-16);
    }

    .hero-content {
      margin: 0 auto;
    }

    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-features {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem; /* Smaller for mobile */
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
    }

    .hero-visual {
      display: none; /* Hide complex visual on mobile if needed, or simplify */
    }
  }
</style>
