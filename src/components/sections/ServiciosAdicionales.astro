---
import { getCollection } from 'astro:content';

const serviciosAdicionales = await getCollection('services');
---

<section class="servicios-adicionales" id="adicionales">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title fade-in-up">Servicios Adicionales</h2>
      <p class="section-subtitle fade-in-up">
        Servicios especializados para necesidades específicas de tu empresa.
        Soluciones puntuales con la calidad y confianza de siempre.
      </p>
    </div>

    <div class="servicios-grid">
      {
        serviciosAdicionales.map((service, index) => (
          <div
            class="servicio-card fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="servicio-icon">{service.data.icon}</div>
            <h3 class="servicio-title">{service.data.title}</h3>
            <p class="servicio-description">{service.data.description}</p>
            <a href={`/servicios/${service.slug}`} class="servicio-link">
              Más información →
            </a>
          </div>
        ))
      }
    </div>

    <div class="servicios-cta fade-in-up">
      <div class="cta-content">
        <h3>¿No encuentras lo que necesitas?</h3>
        <p>
          Contáctanos y te ayudamos con cualquier trámite fiscal o contable
          específico
        </p>
        <a href="#contacto" class="btn btn-primary btn-lg"
          >Consulta Personalizada</a
        >
      </div>
    </div>
  </div>
</section>

<style>
  .servicios-adicionales {
    background: var(--color-white);
    padding: var(--space-20) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-family: var(--font-secondary);
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .servicios-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .servicio-card {
    background: var(--color-background);
    padding: var(--space-6);
    border-radius: var(--border-radius-lg);
    border-left: 4px solid var(--color-primary);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .servicio-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(234, 88, 12, 0.02) 100%
    );
    pointer-events: none;
  }

  .servicio-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    background: var(--color-background);
    border-left-color: var(--orange-500);
  }

  .servicio-card:hover::before {
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(234, 88, 12, 0.05) 100%
    );
  }

  .servicio-icon {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-4);
    display: block;
  }

  .servicio-title {
    font-family: var(--font-secondary);
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }

  .servicio-description {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .servicio-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-sm);
    transition: all var(--transition-normal);
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
  }

  .servicio-link:hover {
    color: var(--orange-700);
    transform: translateX(4px);
  }

  .servicios-cta {
    background: var(--color-primary-light);
    padding: var(--space-10);
    border-radius: var(--border-radius-2xl);
    text-align: center;
    border: 1px solid var(--color-primary);
  }

  .cta-content h3 {
    font-family: var(--font-secondary);
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
  }

  .cta-content p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-6);
    font-family: var(--font-secondary);
    font-size: var(--font-size-base);
    font-weight: 600;
    border-radius: var(--border-radius-md);
    border: 2px solid transparent;
    cursor: pointer;
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .btn-lg {
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background: var(--primary-700);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .servicios-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: var(--font-size-3xl);
    }

    .servicios-cta {
      padding: var(--space-6);
    }

    .cta-content h3 {
      font-size: var(--font-size-xl);
    }
  }
</style>
