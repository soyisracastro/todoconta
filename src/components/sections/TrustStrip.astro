  <div class="flex flex-col items-center text-center gap-3">
    <div class="p-3 bg-green-50 rounded-full text-green-600 mb-1">
      <span class="material-symbols-outlined text-2xl">person_check</span>
    </div>
    <div>
      <h4 class="font-bold text-gray-900 text-sm">Personalizado</h4>
      <p class="text-xs text-gray-500 mt-1">Estrategias únicas para ti</p>
    </div>
  </div>
