---
export interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonUrl: string;
}

const { title, description, buttonText, buttonUrl } = Astro.props;
---

<section class="py-20 px-4 flex justify-center bg-slate-50 dark:bg-slate-950">
  <div
    class="max-w-[960px] w-full bg-white dark:bg-slate-900 border border-slate-100 dark:border-slate-800 rounded-3xl p-10 md:p-16 text-center shadow-xl shadow-slate-200/50 dark:shadow-none relative overflow-hidden"
  >
    <!-- Decorative background element -->
    <div
      class="absolute -top-24 -right-24 w-48 h-48 bg-primary/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute -bottom-24 -left-24 w-48 h-48 bg-primary/5 rounded-full blur-3xl"
    >
    </div>

    <div class="relative z-10">
      <h2
        class="text-3xl md:text-4xl font-black text-navy-blue dark:text-white mb-4 tracking-tight"
      >
        {title}
      </h2>
      <p
        class="text-slate-500 dark:text-gray-400 mb-8 max-w-lg mx-auto text-lg leading-relaxed"
      >
        {description}
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href={buttonUrl}
          class="flex items-center justify-center gap-2 h-14 px-10 rounded-xl bg-primary text-white font-bold text-lg hover:bg-primary-dark transition-all shadow-lg shadow-primary/25 hover:-translate-y-0.5 active:translate-y-0"
        >
          <span class="material-symbols-outlined">download</span>
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>
