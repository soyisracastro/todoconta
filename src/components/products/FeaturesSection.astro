---
interface Feature {
  icon: string;
  title: string;
  description: string;
}

export interface Props {
  introBadge?: string | undefined;
  introTitle: string;
  introDescription: string;
  gridTitle: string;
  features: Feature[];
}

const { introBadge, introTitle, introDescription, gridTitle, features } =
  Astro.props;
---

<section class="relative pt-16 pb-12 sm:pt-24 sm:pb-16 px-4 overflow-hidden">
  <div class="max-w-[960px] mx-auto text-center flex flex-col gap-6">
    {
      introBadge && (
        <div class="inline-flex items-center justify-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary dark:text-green-400 text-xs font-bold uppercase tracking-wider mx-auto">
          <span class="w-2 h-2 rounded-full bg-primary animate-pulse" />
          {introBadge}
        </div>
      )
    }

    <h2
      class="text-4xl sm:text-5xl lg:text-6xl font-black text-navy-blue dark:text-white tracking-tight leading-[1.1] section-intro-title"
      set:html={introTitle}
    />

    <p
      class="text-lg sm:text-xl text-slate-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed"
    >
      {introDescription}
    </p>
  </div>

  <!-- Background effects -->
  <div
    class="absolute top-1/2 left-0 -translate-y-1/2 -translate-x-1/2 w-96 h-96 rounded-full -z-10 pointer-events-none glow-effect-left"
  >
  </div>
  <div
    class="absolute top-0 right-0 translate-x-1/3 w-[500px] h-[500px] rounded-full -z-10 pointer-events-none glow-effect-right"
  >
  </div>
</section>

<section class="px-4 py-8">
  <div class="max-w-[1280px] mx-auto text-center">
    <h3
      class="text-2xl sm:text-3xl font-bold text-navy-blue dark:text-white tracking-tight mb-4"
    >
      {gridTitle}
    </h3>
    <div class="h-1 w-20 bg-primary mx-auto rounded-full"></div>
  </div>
</section>

<section class="px-4 pb-20 pt-8">
  <div class="max-w-[1280px] mx-auto">
    <div class="features-grid-layout gap-6 lg:gap-8">
      {
        features.map(feature => (
          <div class="group bg-white dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl p-6 sm:p-8 flex flex-col gap-5 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-300">
              <span class="material-symbols-outlined !text-3xl">
                {feature.icon}
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <h4 class="text-lg font-bold text-navy-blue dark:text-white">
                {feature.title}
              </h4>
              <p class="text-slate-500 dark:text-gray-400 text-sm leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .section-intro-title {
    font-size: clamp(2.25rem, 5vw, 3.75rem);
    line-height: 1.1;
  }

  .features-grid-layout {
    display: grid;
    grid-template-columns: 1fr;
    width: 100%;
  }

  @media (min-width: 768px) {
    .features-grid-layout {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid-layout {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .glow-effect-left {
    background-color: rgba(29, 111, 66, 0.05);
    filter: blur(64px);
  }

  .glow-effect-right {
    background-color: rgba(30, 58, 138, 0.05);
    filter: blur(64px);
  }
</style>
