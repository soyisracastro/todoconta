---
export interface Props {
  links?: Array<{
    title: string;
    url: string;
  }>;
  cta?: {
    title: string;
    link: string;
  };
  showPhone?: boolean;
}

const { links, cta, showPhone = false } = Astro.props as Props;
---

<header
  class="header sticky top-0 z-50 w-full border-b border-slate-200 dark:border-slate-800 bg-white/90 dark:bg-background-dark/90 backdrop-blur-md transition-all duration-300"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="flex h-20 items-center justify-between transition-all duration-300"
      id="navbar-container"
    >
      <!-- Logo Section -->
      <a
        href="/"
        class="flex items-center gap-2 cursor-pointer group no-underline"
      >
        <div
          class="flex items-center justify-center size-10 rounded-lg bg-primary/10 text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-300"
        >
          <span class="material-symbols-outlined text-2xl"
            >account_balance_wallet</span
          >
        </div>
        <span
          class="text-xl font-extrabold tracking-tight text-slate-900 dark:text-white"
          >TodoConta</span
        >
      </a>

      <!-- Navigation Links (Desktop) -->
      <nav class="hidden md:flex items-center gap-10">
        {
          Array.isArray(links) &&
            links.map(link => (
              <a
                href={link.url}
                class="nav-link text-sm font-semibold text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-primary transition-colors no-underline"
              >
                {link.title}
              </a>
            ))
        }
      </nav>

      <!-- CTA & Mobile Menu Button -->
      <div class="flex items-center gap-4">
        {
          cta && (
            <a
              href={cta.link}
              class="hidden md:flex items-center justify-center h-11 px-6 bg-primary hover:bg-primary-dark text-white text-sm font-bold rounded-lg shadow-lg shadow-primary/20 transition-all transform hover:-translate-y-0.5 active:translate-y-0 no-underline"
            >
              {cta.title}
            </a>
          )
        }

        {
          showPhone && (
            <a
              href="tel:5544753602"
              class="hidden lg:flex items-center gap-2 text-sm font-semibold text-slate-600 dark:text-slate-300 hover:text-primary transition-colors no-underline"
            >
              <span class="material-symbols-outlined text-lg">call</span>
              (55) 4475-3602
            </a>
          )
        }

        <!-- Mobile Hamburger -->
        <button
          class="md:hidden p-2 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors"
        >
          <span class="material-symbols-outlined">menu</span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  // Scroll effect & Section highlighting
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    const container = document.getElementById('navbar-container');

    // Scroll effect - Shrink header on scroll
    window.addEventListener('scroll', () => {
      if (window.scrollY > 20) {
        header?.classList.add('shadow-sm');
        container?.classList.remove('h-20');
        container?.classList.add('h-16');
      } else {
        header?.classList.remove('shadow-sm');
        container?.classList.remove('h-16');
        container?.classList.add('h-20');
      }
    });

    // Highlight active section
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('.nav-link');

    function highlightActiveSection() {
      const scrollPosition = window.scrollY + 100;

      sections.forEach(section => {
        const sectionEl = section as HTMLElement;
        const sectionTop = sectionEl.offsetTop;
        const sectionHeight = sectionEl.offsetHeight;
        const sectionId = sectionEl.getAttribute('id');

        if (
          scrollPosition >= sectionTop &&
          scrollPosition < sectionTop + sectionHeight
        ) {
          navLinks.forEach(link => {
            link.classList.remove('text-primary');
            link.classList.add('text-slate-600', 'dark:text-slate-300');
            if (link.getAttribute('href') === `#${sectionId}`) {
              link.classList.add('text-primary');
              link.classList.remove('text-slate-600', 'dark:text-slate-300');
            }
          });
        }
      });
    }

    if (sections.length > 0) {
      window.addEventListener('scroll', highlightActiveSection);
      highlightActiveSection();
    }
  });
</script>

<style>
  /* Base styles for the highlighting effect if needed */
  .nav-link.active {
    color: var(--color-primary) !important;
  }
</style>
