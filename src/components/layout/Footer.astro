        <h3>Soluciones</h3>
        <div class="footer-links">
          {
            footerLinks.solutions.map(link => (
              <a href={link.url} class="footer-link">
                {link.name}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Contact -->
      <div class="footer-section">
        <h3>Contacto</h3>
        <div class="footer-links">
          {
            footerLinks.contact.map(link => (
              <a href={link.url} class="footer-link">
                {link.name}
