---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'default' | 'large';
  icon?: string;
  external?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'default',
  icon,
  external = false,
  class: className = ''
} = Astro.props;

const linkProps = external
  ? { target: '_blank', rel: 'noopener noreferrer' }
  : {};
---

<a
  href={href}
  class={`link-button link-button--${variant} link-button--${size} ${className}`}
  {...linkProps}
>
  {icon && <span class="link-button__icon" set:html={icon} />}
  <span class="link-button__text">
    <slot />
  </span>
  {external && (
    <svg class="link-button__external" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
      <polyline points="15 3 21 3 21 9"></polyline>
      <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
  )}
</a>

<style>
  .link-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    width: 100%;
    padding: var(--space-4) var(--space-6);
    border-radius: var(--border-radius-xl);
    font-family: var(--font-body);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
    border: 2px solid transparent;
    box-shadow: var(--shadow-md);
  }

  .link-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s ease;
  }

  .link-button:hover::before {
    left: 100%;
  }

  .link-button:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .link-button:active {
    transform: translateY(-2px);
  }

  /* Variants */
  .link-button--primary {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .link-button--primary:hover {
    background: var(--color-primary-dark);
    box-shadow: var(--shadow-xl), var(--shadow-glow);
  }

  .link-button--secondary {
    background: var(--color-secondary);
    color: var(--color-white);
  }

  .link-button--secondary:hover {
    background: var(--color-secondary-light);
  }

  .link-button--outline {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .link-button--outline:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  /* Sizes */
  .link-button--default {
    font-size: var(--font-size-base);
    padding: var(--space-3) var(--space-5);
  }

  .link-button--large {
    font-size: var(--font-size-xl);
    padding: var(--space-5) var(--space-8);
    font-weight: var(--font-weight-bold);
  }

  .link-button__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25em;
  }

  .link-button__text {
    flex: 1;
  }

  .link-button__external {
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .link-button:hover .link-button__external {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .link-button--large {
      font-size: var(--font-size-lg);
      padding: var(--space-4) var(--space-6);
    }
  }
</style>
