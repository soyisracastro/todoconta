---
export interface Props {
  variant?: 'primary' | 'secondary' | 'accent' | 'outline' | 'link';
  size?: 'sm' | 'default' | 'lg' | 'xl';
  href?: string;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'default',
  href,
  class: className,
  ...props
} = Astro.props as Props;

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  accent: 'btn-accent',
  outline: 'btn-outline',
  link: 'btn-link',
};

const sizeClasses = {
  sm: 'btn-sm',
  default: '',
  lg: 'btn-lg',
  xl: 'btn-xl',
};

const classes = [
  'btn',
  variantClasses[variant],
  sizeClasses[size],
  className,
].join(' ');
---

{
  href ? (
    <a href={href} class={classes} {...props}>
      <slot />
    </a>
  ) : (
    <button class={classes} {...props}>
      <slot />
    </button>
  )
}
