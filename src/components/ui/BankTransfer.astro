---
import Button from './Button.astro';

export interface Props {
  productTitle: string;
  productPrice?: number;
  productId: string;
}

const { productTitle, productPrice } = Astro.props;

// Bank account information (should be moved to environment variables in production)
const bankInfo = {
  bank: 'BBVA Bancomer',
  accountHolder: 'Israel Castro Urieta',
  accountNumber: '2851186442',
  clabe: '012266028511864426',
  reference: `Pago ${productTitle}`,
};

const title = "Pago por Transferencia";
const subtitle = "Opción segura y sin comisiones adicionales";
---

<section class="section section-alt" id="bank-transfer-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title animate-fade-in-up">{title}</h2>
      {
        subtitle && (
          <p class="section-subtitle animate-fade-in-up delay-100">
            {subtitle}
          </p>
        )
      }
    </div>

    <!-- Bank Information Card -->
    <div class="card mb-8">
      <div class="card-body">
        <h3 class="card-title">
          Información Bancaria
        </h3>

        <div class="grid grid-cols-2 gap-8">
          <!-- Account Details -->
          <div class="space-y-6">
            <div class="form-group">
              <label class="form-label">Banco</label>
              <div class="bg-warm p-4 rounded-lg border border-primary-light">
                <div class="flex items-center justify-between flex-col-mobile">
                  <span class="text-primary font-mono font-medium">{bankInfo.bank}</span>
                  <Button
                    variant="outline"
                    size="sm"
                    onclick="copyToClipboard(window.bankInfo.bank, event)"
                  >
                    Copiar
                  </Button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label">Beneficiario</label>
              <div class="bg-warm p-4 rounded-lg border border-primary-light">
                <div class="flex items-center justify-between flex-col-mobile">
                  <span class="text-primary font-mono text-sm font-medium"
                    >{bankInfo.accountHolder}</span
                  >
                  <Button
                    variant="outline"
                    size="sm"
                    onclick="copyToClipboard(window.bankInfo.accountHolder, event)"
                  >
                    Copiar
                  </Button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label">Número de Cuenta</label>
              <div class="bg-warm p-4 rounded-lg border border-primary-light">
                <div class="flex items-center justify-between flex-col-mobile">
                  <span class="text-primary font-mono font-medium"
                    >{bankInfo.accountNumber}</span
                  >
                  <Button
                    variant="outline"
                    size="sm"
                    onclick="copyToClipboard(window.bankInfo.accountNumber, event)"
                  >
                    Copiar
                  </Button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label">CLABE Interbancaria</label>
              <div class="bg-warm p-4 rounded-lg border border-primary-light">
                <div class="flex items-center justify-between flex-col-mobile">
                  <span class="text-primary font-mono font-medium">{bankInfo.clabe}</span>
                  <Button
                    variant="outline"
                    size="sm"
                    onclick="copyToClipboard(window.bankInfo.clabe, event)"
                  >
                    Copiar
                  </Button>
                </div>
              </div>
            </div>
          </div>

          <!-- Payment Instructions -->
          <div class="space-y-6">
            <div class="form-group">
              <label class="form-label">Concepto de Pago</label>
              <div class="bg-warm p-4 rounded-lg border border-primary-light">
                <div class="flex items-center justify-between flex-col-mobile">
                  <span class="text-primary font-mono text-sm font-medium"
                    >{bankInfo.reference}</span
                  >
                  <Button
                    variant="outline"
                    size="sm"
                    onclick="copyToClipboard(window.bankInfo.reference, event)"
                  >
                    Copiar
                  </Button>
                </div>
              </div>
            </div>

            {
              productPrice && (
                <div class="form-group">
                  <label class="form-label">Monto a Pagar</label>
                 <div class="bg-warm p-4 rounded-lg border border-primary-light">
                   <div class="flex items-center justify-between flex-col-mobile">
                     <span class="text-success font-bold text-xl">
                       ${productPrice.toLocaleString()} MXN
                     </span>
                     <Button
                       variant="outline"
                       size="sm"
                       onclick="copyToClipboard(window.productPrice.toString(), event)"
                     >
                       Copiar
                     </Button>
                   </div>
                 </div>
                </div>
              )
            }

            <!-- Important Notes -->
            <div class="bg-warm p-6 rounded-lg border border-warning">
              <h4 class="text-warning font-semibold mb-4 flex items-center gap-2">
                Instrucciones para el pago
              </h4>
              <ol class="text-primary text-sm space-y-2">
                <li>
                  1. Realiza la transferencia usando los datos bancarios mostrados en esta sección.
                </li>
                <li>
                  2. Utiliza el concepto de pago: <strong class="text-primary">"{bankInfo.reference}"</strong>
                </li>
                <li>
                  3. Toma una captura de pantalla o guarda el comprobante de tu transferencia
                </li>
                <li>
                  4. Envía el comprobante por email a: <strong class="text-primary"><a
                    href="mailto:pagos@todoconta.com"
                    class="text-primary font-semibold hover:underline">pagos@todoconta.com</a></strong>
                </li>
                <li>
                  5. Recibirás las instrucciones de activación/descarga en las próximas 24 horas
                </li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline define:vars={{ bankInfo, productPrice }}>
  // Expose variables to global scope for onclick strings
  window.bankInfo = bankInfo;
  window.productPrice = productPrice;

  // Copy to clipboard functionality
  function copyToClipboard(text, event) {
    // Prevent default if it's called from an event
    if (event) {
      event.preventDefault();
    }

    navigator.clipboard
      .writeText(text)
      .then(() => {
        // Show temporary success feedback
        const button = event ? event.target : null;
        if (button) {
          const originalText = button.textContent;
          button.textContent = '¡Copiado!';
          button.classList.add('text-success');

          setTimeout(() => {
            if (button) {
              button.textContent = originalText;
              button.classList.remove('text-success');
            }
          }, 2000);
        }
      })
      .catch(err => {
        console.error('Failed to copy text: ', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
      });
  }

  // Make copyToClipboard available globally
  window.copyToClipboard = copyToClipboard;
</script>

