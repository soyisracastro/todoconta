---
const items = [
  {
    title: '2 Casos Prácticos Adicionales',
    desc: 'Con checkmarks verdes y pasos detallados para implementación inmediata.',
    icon: 'description',
    color: 'blue',
  },
  {
    title: '10 Plantillas de Prompts',
    desc: 'Listas para copiar y pegar en ChatGPT, probadas para contabilidad mexicana.',
    icon: 'auto_awesome',
    color: 'purple',
  },
  {
    title: 'Matriz de Decisión',
    desc: 'Hoja de ruta clara para elegir la herramienta correcta según la tarea.',
    icon: 'explore',
    color: 'cyan',
  },
];
---

<div class="flex flex-col gap-6 w-full max-w-[720px] mx-auto lg:mx-0">
  <h3
    class="text-[#111118] dark:text-white text-2xl font-black leading-tight px-1 font-display m-0 animate-on-scroll"
    data-animation="fade-in-up"
  >
    Lo Que Vas a Recibir
  </h3>

  <div class="flex flex-col gap-4">
    {
      items.map((item, index) => (
        <div
          class="flex items-center gap-5 bg-white dark:bg-white/5 p-6 rounded-2xl shadow-sm border border-gray-100 dark:border-white/10 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/5 hover:-translate-y-1 group animate-on-scroll"
          data-animation="fade-in-up"
          data-delay={100 + index * 100}
        >
          <div
            class={`flex items-center justify-center rounded-2xl bg-${item.color}-50 dark:bg-${item.color}-900/20 shrink-0 w-16 h-16 text-${item.color}-600 dark:text-${item.color}-400 group-hover:scale-110 transition-transform`}
          >
            <span class="material-symbols-outlined text-[32px] font-bold">
              {item.icon}
            </span>
          </div>

          <div class="flex flex-col justify-center text-left">
            <p class="text-[#111118] dark:text-white text-xl font-bold leading-tight font-display m-0">
              {item.title}
            </p>
            <div class="flex items-center gap-2 mt-1.5">
              {item.color === 'blue' && (
                <span class="material-symbols-outlined text-emerald-500 text-lg font-bold">
                  check_circle
                </span>
              )}
              <p class="text-gray-500 dark:text-gray-400 text-base font-medium leading-relaxed m-0">
                {item.desc}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .font-display {
    font-family: 'Space Grotesk Variable', 'Space Grotesk', sans-serif;
  }

  /* Fallback color utilities if Tailwind hasn't generated them */
  .bg-blue-50 {
    background-color: #eff6ff;
  }
  .text-blue-600 {
    color: #2563eb;
  }
  .bg-purple-50 {
    background-color: #faf5ff;
  }
  .text-purple-600 {
    color: #9333ea;
  }
  .bg-cyan-50 {
    background-color: #ecfeff;
  }
  .text-cyan-600 {
    color: #0891b2;
  }
</style>
