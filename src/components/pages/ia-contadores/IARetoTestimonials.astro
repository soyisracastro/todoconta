            data-animation="fade-in-up"
            data-delay={index * 150}
          >
            <div class="flex flex-col flex-1">
              <span class="material-symbols-outlined text-[#6324eb] text-5xl mb-6 opacity-40 group-hover:opacity-100 transition-opacity duration-300">
