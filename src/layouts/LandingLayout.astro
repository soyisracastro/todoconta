---
// src/layouts/LandingLayout.astro
import '../styles/reset.css';
import '../styles/design-system.css';
import '../styles/landing.css';
import '../styles/global.css';
import '../styles/animations.css';

export interface Props {
  title: string;
  description: string;
  keywords?: string[];
  ogImage?: string;
}

const {
  title,
  description,
  keywords = [],
  ogImage = '/images/og-default.jpg',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Keywords -->
    {
      keywords.length > 0 && (
        <meta name="keywords" content={keywords.join(', ')} />
      )
    }

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.url)} />

    <!-- Google Analytics -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-8D6CZ461Y3"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8D6CZ461Y3');
    </script>

    <!-- Meta Pixel Code -->
    <script is:inline>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = '2.0';
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js'
      );
      fbq('init', '321230706915370');
      fbq('track', 'PageView');
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.net/tr?id=321230706915370&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->

    <!-- Estructura JSON-LD para SEO -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Product',
        name: title,
        description: description,
        brand: {
          '@type': 'Brand',
          name: 'Todoconta',
        },
        offers: {
          '@type': 'Offer',
          priceCurrency: 'MXN',
          availability: 'https://schema.org/InStock',
        },
      })}
    />
  </head>
  <body>
    <!-- Floating Home Link -->
    <div class="floating-home-link">
      <a href="/" title="Volver a Todoconta">
        <img
          src="/images/logo-icon.svg"
          alt="Todoconta"
          width="32"
          height="32"
        />
      </a>
    </div>

    <!-- Email Modal -->
    <div id="email-modal" class="email-modal">
      <div class="modal-backdrop" id="modal-backdrop"></div>
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Completa tu compra</h3>
          <button class="modal-close" id="modal-close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>

        <div class="modal-body">
          <div class="product-info">
            <h4>Producto seleccionado:</h4>
            <p class="product-name">Producto</p>
            <p class="product-price">$0 MXN</p>
          </div>

          <div class="email-form">
            <label for="customer-email" class="form-label">
              Correo electrónico
            </label>
            <input
              type="email"
              id="customer-email"
              class="form-input"
              placeholder="tu@email.com"
              required
            />
            <p class="form-help">
              Te enviaremos las instrucciones de descarga y activación a este correo.
            </p>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-outline" id="modal-cancel">
            Cancelar
          </button>
          <button class="btn btn-primary" id="modal-confirm">
            Continuar con el pago
          </button>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Minimal Footer -->
    <div class="minimal-footer">
      <p>
        &copy; {new Date().getFullYear()} Todoconta. Todos los derechos reservados.
      </p>
      <div class="footer-links">
        <a href="/privacidad">Privacidad</a>
        <a href="/terminos">Términos</a>
        <a href="/contacto">Contacto</a>
      </div>
    </div>

    <!-- Email Modal Script -->
    <script>
      // Email modal functionality
      document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('email-modal');
        const backdrop = document.getElementById('modal-backdrop');
        const closeBtn = document.getElementById('modal-close');
        const cancelBtn = document.getElementById('modal-cancel');
        const confirmBtn = document.getElementById('modal-confirm');
        const emailInput = document.getElementById('customer-email');

        let currentResolve = null;
        let currentReject = null;

        function closeModal() {
          if (modal) {
            modal.classList.remove('open');
            document.body.style.overflow = '';
          }
          if (currentReject) {
            currentReject(new Error('Modal closed'));
          }
        }

        function showError() {
          if (emailInput) {
            emailInput.style.borderColor = '#ef4444';
            setTimeout(function() {
              if (emailInput) emailInput.style.borderColor = '';
            }, 3000);
          }
        }

        // Event listeners
        if (backdrop) backdrop.onclick = closeModal;
        if (closeBtn) closeBtn.onclick = closeModal;
        if (cancelBtn) cancelBtn.onclick = function() {
          closeModal();
          if (currentReject) currentReject(new Error('Cancelled'));
        };

        if (confirmBtn) confirmBtn.onclick = function(e) {
          e.preventDefault();
          if (!emailInput) return;

          const email = emailInput.value.trim();
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

          if (!email || !emailRegex.test(email)) {
            showError();
            return;
          }

          // Close modal without throwing error (successful completion)
          if (modal) {
            modal.classList.remove('open');
            document.body.style.overflow = '';
          }

          if (currentResolve) {
            currentResolve(email);
          }
        };

        // Enter key support
        if (emailInput) {
          emailInput.onkeypress = function(e) {
            if (e.key === 'Enter') {
              if (confirmBtn) confirmBtn.click();
            }
          };
        }

        // Global function
        window.showEmailModal = function(productTitle, productPrice) {
          return new Promise(function(resolve, reject) {
            currentResolve = resolve;
            currentReject = reject;

            if (modal) {
              const productNameEl = modal.querySelector('.product-name');
              const productPriceEl = modal.querySelector('.product-price');

              if (productNameEl && productTitle) productNameEl.textContent = productTitle;
              if (productPriceEl && productPrice) productPriceEl.textContent = '$' + productPrice + ' MXN';

              if (emailInput) {
                emailInput.value = '';
                emailInput.focus();
              }

              modal.classList.add('open');
              document.body.style.overflow = 'hidden';
            }
          });
        };
      });
    </script>

    <!-- Shared functionality script -->
    <script>
      import { initSharedUtils } from '../scripts/shared-utils.js';
      initSharedUtils();
    </script>
  </body>
</html>

<style>
  .floating-home-link {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background-color: var(--color-white);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal);
  }

  .floating-home-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .minimal-footer {
    padding: var(--space-6) 0;
    background-color: var(--color-primary);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--color-white);
  }

  .footer-links {
    margin-top: var(--space-2);
    display: flex;
    justify-content: center;
    gap: var(--space-4);
  }

  .footer-links a {
    color: var(--color-white);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .footer-links a:hover {
    color: var(--primary-text-secondary);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .floating-home-link {
      top: 10px;
      left: 10px;
      width: 36px;
      height: 36px;
    }
  }

  /* Email Modal Styles */
  .email-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .email-modal.open {
    opacity: 1;
    visibility: visible;
  }

  .modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    background: var(--color-background);
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-2xl);
    max-width: 500px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    transition: transform 0.3s ease;
  }

  .email-modal.open .modal-content {
    transform: translate(-50%, -50%) scale(1);
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-6);
    border-bottom: 1px solid var(--color-primary-light);
  }

  .modal-title {
    margin: 0;
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .modal-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--border-radius-md);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .modal-close:hover {
    background: var(--color-primary-light);
    color: var(--color-primary);
  }

  .modal-body {
    padding: var(--space-6);
  }

  .product-info {
    background: var(--color-primary-light);
    padding: var(--space-4);
    border-radius: var(--border-radius-md);
    margin-bottom: var(--space-6);
  }

  .product-info h4 {
    margin: 0 0 var(--space-2) 0;
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-primary);
  }

  .product-name {
    margin: 0 0 var(--space-1) 0;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .product-price {
    margin: 0;
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-primary);
  }

  .email-form {
    margin-bottom: var(--space-6);
  }

  .form-label {
    display: block;
    margin-bottom: var(--space-2);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .form-input {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    border: 2px solid var(--color-primary-light);
    border-radius: var(--border-radius-md);
    font-size: var(--font-size-base);
    transition: border-color var(--transition-fast);
    background: var(--color-background);
    color: var(--color-text-primary);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(8, 145, 178, 0.1);
  }

  .form-help {
    margin: var(--space-2) 0 0 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.4;
  }

  .modal-footer {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-6);
    border-top: 1px solid var(--color-primary-light);
    background: var(--color-background-alt);
    border-radius: 0 0 var(--border-radius-xl) var(--border-radius-xl);
  }

  .modal-footer .btn {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .modal-content {
      width: 95%;
      margin: var(--space-4);
    }

    .modal-header,
    .modal-body,
    .modal-footer {
      padding: var(--space-4);
    }

    .modal-title {
      font-size: var(--font-size-lg);
    }

    .modal-footer {
      flex-direction: column;
    }

    .modal-footer .btn {
      width: 100%;
    }
  }
</style>
