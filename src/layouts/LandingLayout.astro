---
// src/layouts/LandingLayout.astro
import '../styles/reset.css';
import '../styles/design-system.css';
import '../styles/landing.css';
import '../styles/global.css';
import '../styles/animations.css';

export interface Props {
  title: string;
  description: string;
  keywords?: string[];
  ogImage?: string;
}

const {
  title,
  description,
  keywords = [],
  ogImage = '/images/og-default.jpg',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Keywords -->
    {
      keywords.length > 0 && (
        <meta name="keywords" content={keywords.join(', ')} />
      )
    }

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.url)} />

    <!-- Google Analytics -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-8D6CZ461Y3"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8D6CZ461Y3');
    </script>

    <!-- Meta Pixel Code -->
    <script is:inline>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = '2.0';
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js'
      );
      fbq('init', '321230706915370');
      fbq('track', 'PageView');
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.net/tr?id=321230706915370&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->

    <!-- Estructura JSON-LD para SEO -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Product',
        name: title,
        description: description,
        brand: {
          '@type': 'Brand',
          name: 'Todoconta',
        },
        offers: {
          '@type': 'Offer',
          priceCurrency: 'MXN',
          availability: 'https://schema.org/InStock',
        },
      })}
    />
  </head>
  <body>
    <!-- Floating Home Link -->
    <div class="floating-home-link">
      <a href="/" title="Volver a Todoconta">
        <img
          src="/images/logo-icon.svg"
          alt="Todoconta"
          width="32"
          height="32"
        />
      </a>
    </div>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Minimal Footer -->
    <div class="minimal-footer">
      <p>
        &copy; {new Date().getFullYear()} Todoconta. Todos los derechos reservados.
      </p>
      <div class="footer-links">
        <a href="/privacidad">Privacidad</a>
        <a href="/terminos">TÃ©rminos</a>
        <a href="/contacto">Contacto</a>
      </div>
    </div>

    <!-- Shared functionality script -->
    <script>
      import { initSharedUtils } from '../scripts/shared-utils.js';
      initSharedUtils();
    </script>
  </body>
</html>

<style>
  .floating-home-link {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background-color: var(--color-white);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal);
  }

  .floating-home-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .minimal-footer {
    padding: var(--space-6) 0;
    background-color: var(--color-primary);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--color-white);
  }

  .footer-links {
    margin-top: var(--space-2);
    display: flex;
    justify-content: center;
    gap: var(--space-4);
  }

  .footer-links a {
    color: var(--color-white);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .footer-links a:hover {
    color: var(--primary-text-secondary);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .floating-home-link {
      top: 10px;
      left: 10px;
      width: 36px;
      height: 36px;
    }
  }
</style>
