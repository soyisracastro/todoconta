---
// src/layouts/ServiceLayout.astro
import '../styles/reset.css';
import '../styles/design-system.css';
import '../styles/global.css';
import '../styles/components.css';
import '../styles/layout-service.css';

// Importar componentes SEO
import BaseSEO from '../components/seo/BaseSEO.astro';
import OrganizationSchema from '../components/seo/OrganizationSchema.astro';

export interface Props {
  title: string;
  description: string;
  keywords?: string[];
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- SEO Meta Tags -->
    <BaseSEO title={title} description={description} keywords={keywords} />

    <!-- Schema.org Organization -->
    <OrganizationSchema />

    <!-- Slot para schemas adicionales específicos de página -->
    <slot name="head" />

    <title>{title} | Todoconta</title>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-8D6CZ461Y3"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8D6CZ461Y3');
    </script>

    <!-- Meta Pixel Code -->
    <script is:inline>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = '2.0';
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js'
      );
      fbq('init', '321230706915370');
      fbq('track', 'PageView');
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=321230706915370&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->
  </head>
  <body>

    <slot />

    <slot name="scripts" />

    <script>
      // Workshop banner close functionality
      function closeWorkshopBanner() {
        const banner = document.querySelector('.workshop-banner-header');
        if (banner) {
          banner.style.display = 'none';
        }
      }

      // Make function globally available
      window.closeWorkshopBanner = closeWorkshopBanner;
    </script>
  </body>
</html>

<style>
  /* Workshop Banner Header */
  .workshop-banner-header {
    background-color: var(--color-error);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-4) 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(8px);
  }

  .workshop-banner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .banner-link {
    color: var(--color-white);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-base);
    flex: 1;
    text-align: center;
    transition: color var(--transition-fast);
  }

  .banner-link:hover {
    color: var(--color-primary);
  }

  .banner-close {
    background: none;
    border: none;
    font-size: var(--font-size-lg);
    color: var(--color-white);
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--border-radius-md);
    transition: all var(--transition-fast);
    flex-shrink: 0;
    margin-left: var(--space-4);
  }

  .banner-close:hover {
    background: var(--color-background-alt);
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .workshop-banner {
      padding: 0 var(--space-4);
    }

    .banner-link {
      font-size: var(--font-size-sm);
    }

    .banner-close {
      font-size: var(--font-size-base);
      margin-left: var(--space-2);
    }
  }
</style>
