---
// Importar los estilos globales
import '../styles/reset.css';
import '../styles/design-system.css';
import '../styles/global.css';
import '../styles/animations.css';

export interface Props {
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />

    {keywords && <meta name="keywords" content={keywords} />}

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://todoconta.com" />
    <meta property="og:image" content="https://todoconta.com/og-image.jpg" />

    <!-- Google Analytics -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-8D6CZ461Y3"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8D6CZ461Y3');
    </script>

    <!-- Meta Pixel Code -->
    <script async is:inline>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = '2.0';
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        'script',
        'https://connect.facebook.net/en_US/fbevents.js'
      );
      fbq('init', '321230706915370');
      fbq('track', 'PageView');
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=321230706915370&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->

    <!-- Security and theme metadatos -->
    <meta name="theme-color" content="#0284c7" />
    <meta name="robots" content="index, follow" />
  </head>
  <body>
    <!-- Workshop Banner -->
    <header class="workshop-banner-header">
      <div class="workshop-banner">
        <a href="/ia-contadores" class="banner-link">
          ðŸš€ Nuevo Taller: IA para Contadores - Automatiza tu prÃ¡ctica y crea nuevas fuentes de ingresos
        </a>
        <button class="banner-close" aria-label="Cerrar banner" onclick="closeWorkshopBanner()">
          âœ•
        </button>
      </div>
    </header>

    <slot />

    <!-- Shared functionality and animations script -->
    <script>
      import { initSharedUtils } from '../scripts/shared-utils.js';
      import { initAnimations } from '../scripts/animations.js';

      // Initialize both systems
      initSharedUtils();
      initAnimations();

      // Workshop banner close functionality
      function closeWorkshopBanner() {
        const banner = document.querySelector('.workshop-banner-header');
        if (banner) {
          banner.style.display = 'none';
        }
      }

      // Make function globally available
      window.closeWorkshopBanner = closeWorkshopBanner;
    </script>
  </body>
</html>

<style>
  /* Workshop Banner Header */
  .workshop-banner-header {
    background-color: var(--color-error);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-4) 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(8px);
  }

  .workshop-banner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .banner-link {
    color: var(--color-white);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-base);
    flex: 1;
    text-align: center;
    transition: color var(--transition-fast);
  }

  .banner-link:hover {
    color: var(--color-primary);
  }

  .banner-close {
    background: none;
    border: none;
    font-size: var(--font-size-lg);
    color: var(--color-white);
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--border-radius-md);
    transition: all var(--transition-fast);
    flex-shrink: 0;
    margin-left: var(--space-4);
  }

  .banner-close:hover {
    background: var(--color-background-alt);
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .workshop-banner {
      padding: 0 var(--space-4);
    }

    .banner-link {
      font-size: var(--font-size-sm);
    }

    .banner-close {
      font-size: var(--font-size-base);
      margin-left: var(--space-2);
    }
  }
</style>
